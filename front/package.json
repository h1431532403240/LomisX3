{
  "name": "front",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "generate-types": "openapi-typescript ../back/public/docs/openapi.yaml -o src/types/api.ts",
    "generate-types:remote": "openapi-typescript http://localhost:8000/docs/openapi.yaml -o src/types/api.ts",
    "generate-types:safe": "npm run generate-types || npm run generate-types:fallback",
    "generate-types:fallback": "echo 'OpenAPI 型別生成失敗，使用備用型別檔案' && cp src/types/api.fallback.ts src/types/api.ts",
    "type-check": "tsc --noEmit",
    "dev": "npm run generate-types:safe && vite",
    "build": "npm run generate-types:safe && tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
